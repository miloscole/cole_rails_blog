<div class="container">
  <article>
    <header class="flex-between">
      <strong>
        Created by: <%= @article.user.username %>
      </strong>
    </header>
    <%= @article.user.email %>
  </article>
  <article>
    <header>
      <br>
      <div  class = "flex-between">
        <h3 class="margin-unset"><%= @article.title %></h3>
        <span>
          <% @article.categories.each do |category| %>
            <mark><%= category.name %></mark>
          <% end %>
        </span>
      </div>
      <br>
    </header>
    <p><%= simple_format(@article.text) %></p>
    <footer>
      <% if actions_allowed_on_article? %>
        <%= link_to "Edit", edit_article_path(@article)%> |
        <%= link_to "Delete", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %> |
      <% end %>
      <%= link_to "View all articles", articles_path%>
    </footer>
  </article>
</div>
